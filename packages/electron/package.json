{
  "name": "@soundtouch/desktop",
  "version": "1.0.0",
  "description": "SoundTouch Controller Desktop App",
  "main": "dist/main.js",
  "author": "Carlos Campano",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "tsc",
    "package": "npm run build && electron-builder --mac",
    "package:dir": "npm run build && electron-builder --mac --dir"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.soundtouch.controller",
    "productName": "SoundTouch Controller",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "resources/icon.png",
      "darkModeSupport": true
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "app"
      },
      {
        "from": "../web/server.js",
        "to": "server/server.js"
      },
      {
        "from": "../web/data",
        "to": "data"
      }
    ],
    "asar": true
  }
}
