{
  "name": "@soundtouch/core",
  "version": "1.0.0",
  "description": "Core library for Bose SoundTouch API",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "discover": "tsx src/scripts/discover.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "bonjour-service": "^1.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist"
  ]
}
